<div class="container">
  <div class="header">
    <h2><%= @code.title %></h2>
  </div>
</div>
<div class="container">
  <%= form_for @code do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: @code.title %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 25, class: 'form-control', placeholder: @code.body %>
      </div>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Private Code
        <% end %>
      </div>
      <div class="form-group">
           <%= f.submit "Save", class: 'btn btn-success btn-large' %>
      </div>
    <% end %>
</div>